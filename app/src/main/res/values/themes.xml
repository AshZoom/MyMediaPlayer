<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.MyMediaPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="MainScreen" parent="Theme.MyMediaPlayer">
        <item name="android:background">@color/background</item>

    </style>

    <style name="SecondaryScreen" parent="Theme.MyMediaPlayer">

        <item name="drawableTint">@color/text_settings_color</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="trackTint">@color/color_switch_track_light</item>
        <item name="thumbTint">@color/color_switch_knob_light</item>
        <item name="iconTint">@color/color_switch_knob_light</item>

    </style>

    <style name="ButtonUpdate" parent="Theme.MyMediaPlayer">

        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_update_radius</item>

    </style>

    <style name="ImageViewSearch" parent="Theme.MyMediaPlayer">

        <item name="android:src">@drawable/il_search_light_mode</item>

    </style>

    <style name="SwitchButton" parent="Theme.MyMediaPlayer">

        <item name="android:src">@drawable/switch_off</item>

    </style>

</resources>